<Page
    x:Class="MyInsta.View.PostsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:local="using:MyInsta.View"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:MyInsta.Model"
    xmlns:localInsta="using:InstagramApiSharp.Classes.Models"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlAcrylicElementBrush}">
    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Century Gothic"/>
        </Style>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ProgressBar x:Name="progressCollection" Visibility="Collapsed" IsIndeterminate="True" Margin="5" VerticalAlignment="Top"/>
        <ComboBox x:Name="collectionsBox" ItemsSource="{x:Bind InstaCollections.Items}" HorizontalAlignment="Right" 
                  VerticalAlignment="Center" Header="Your collections" HorizontalContentAlignment="Center"
                  Width="200" Margin="10"
                  SelectionChanged="collectionsBox_SelectionChanged">
            <ComboBox.ItemTemplate>
                <DataTemplate x:DataType="localInsta:InstaCollectionItem">
                    <StackPanel Orientation="Horizontal">
                        <Ellipse Height="20" Width="20">
                            <Ellipse.Fill>
                                <ImageBrush>
                                    <ImageBrush.ImageSource>
                                        <BitmapImage UriSource="{x:Bind CoverMedia.ImageVersions[0].Uri}"/>
                                    </ImageBrush.ImageSource>
                                </ImageBrush>
                            </Ellipse.Fill>
                        </Ellipse>
                        <TextBlock Margin="20, 0, 0, 0" Text="{x:Bind CollectionName}"/>
                    </StackPanel>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>
        <ProgressRing x:Name="progressPosts"
                      Height="100" Width="100" Grid.Row="1"/>
        <ScrollViewer x:Name="scrollListPosts" Grid.RowSpan="2" Margin="0, 20, 0, 0"
                      ViewChanged="ScrollListPosts_ViewChanged" VerticalScrollBarVisibility="Hidden"
                      Width="750">
            <ListView x:Name="postsList" SelectionMode="None" ItemsSource="{x:Bind SavedPosts}" 
                      HorizontalContentAlignment="Stretch" Width="700">
                <ListView.Resources>
                    <ResourceDictionary>
                        <ResourceDictionary.MergedDictionaries>
                            <ResourceDictionary>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalAlignment" Value="Center"/>
                                </Style>
                            </ResourceDictionary>
                        </ResourceDictionary.MergedDictionaries>
                    </ResourceDictionary>
                </ListView.Resources>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.ItemTemplate>
                    <DataTemplate x:DataType="model:PostItem">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="80"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal">
                                <Ellipse  Margin="10" Height="40" Width="40">
                                    <Ellipse.Fill>
                                        <ImageBrush>
                                            <ImageBrush.ImageSource>
                                                <BitmapImage UriSource="{x:Bind UserPicture}"/>
                                            </ImageBrush.ImageSource>
                                        </ImageBrush>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <Button x:Name="buttonProfile" CornerRadius="5" Tag="{x:Bind UserPk}" Click="ButtonProfile_Click" Margin="10" VerticalAlignment="Center" Content="{x:Bind UserNamePost}"/>
                            </StackPanel>

                            <StackPanel Orientation="Vertical" Grid.Row="1">
                                <FlipView Width="500" x:Name="itemsList" Tapped="PostsList_SelectionChanged" ItemsSource="{x:Bind Items}" HorizontalContentAlignment="Center">
                                    <FlipView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                                        </ItemsPanelTemplate>
                                    </FlipView.ItemsPanel>
                                    <FlipView.ItemTemplate>
                                        <DataTemplate x:DataType="model:CustomMedia">
                                            <StackPanel>
                                                <Image Source="{x:Bind UrlSmallImage}" Margin="10" Height="500" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </FlipView.ItemTemplate>
                                </FlipView>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock x:Uid="Likes" Margin="5, 5, 10, 5" FontSize="25" FontFamily="Century Gothic"/>
                                    <TextBlock Text="{x:Bind Items[0].CountLikes}" Margin="5, 5, 10, 5" FontSize="25" FontFamily="Century Gothic"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <TextBlock x:Uid="Comments" Margin="5, 5, 10, 5" FontSize="25" FontFamily="Century Gothic"/>
                                    <TextBlock Text="{x:Bind Items[0].CountComments}" Margin="5, 5, 10, 5" FontSize="25" FontFamily="Century Gothic"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button x:Name="buttonDownload" Margin="10" Content="Download saved post" CornerRadius="5" Click="ButtonDownload_Click" Tag="{x:Bind Id}"/>
                                    <Button x:Name="buttonShare" Tag="{x:Bind Id}" Click="ButtonShare_Click" CornerRadius="5" Margin="10">
                                        <Button.Content>
                                            <SymbolIcon Symbol="Share"/>
                                        </Button.Content>
                                    </Button>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </ScrollViewer>
    </Grid>
</Page>
