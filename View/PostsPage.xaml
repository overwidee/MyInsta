                                                        Text="{x:Bind Items[0].CountLikersShow}"
                                                        Tag="{x:Bind Items[0].Pk}"
                                                        Click="LikesItem_OnClick">
                                                    </MenuFlyoutItem>
                                                    <MenuFlyoutItem 
                                                        Text="{x:Bind Items[0].CountCommentsShow}"
                                                        Tag="{x:Bind Items[0].Pk}"
                                                        Click="CommentsItem_OnClick"
                                                                    >
                                                    </MenuFlyoutItem>
                                                    <MenuFlyoutSeparator/>
                                                    <MenuFlyoutItem 
                                                    Click="ButtonDownload_Click"
                                                    Text="Download post"
                                                    Tag="{x:Bind Id}"
                                                    />
                                                    <MenuFlyoutItem
