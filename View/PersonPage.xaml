<Page
    x:Class="MyInsta.View.PersonPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MyInsta.View"
    xmlns:interactivity="using:Microsoft.Xaml.Interactivity"
    xmlns:localInsta="using:InstagramApiSharp.Classes.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:behaviors="using:Microsoft.Toolkit.Uwp.UI.Animations.Behaviors"
    xmlns:model="using:MyInsta.Model"
    xmlns:charting="using:WinRTXamlToolkit.Controls.DataVisualization.Charting"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlAcrylicElementBrush}"
    Unloaded="Page_Unloaded">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <AcrylicBrush
                        x:Key="CMapUwpAcrylicBrush"
                        BackgroundSource="Backdrop"
                        FallbackColor="{StaticResource SystemListMediumColor}"
                        TintColor="Black"
                        TintOpacity="0.4" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="HighContrast">
                    <SolidColorBrush x:Key="CMapUwpAcrylicBrush" Color="{ThemeResource SystemColorWindowColor}" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <AcrylicBrush
                        x:Key="CMapUwpAcrylicBrush"
                        BackgroundSource="HostBackdrop"
                        FallbackColor="{StaticResource SystemListMediumColor}"
                        TintColor="White"
                        TintOpacity="0.7" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Dark">
                    <AcrylicBrush
                        x:Key="CMapUwpAcrylicBrush"
                        BackgroundSource="HostBackdrop"
                        FallbackColor="{StaticResource SystemListMediumColor}"
                        TintColor="Black"
                        TintOpacity="0.7" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <Style TargetType="CheckBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="CheckBox">
                                    <Border x:Name="PART_root">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CheckStates">
                                                <VisualStateGroup.States>
                                                    <VisualState x:Name="Checked">
                                                        <VisualState.Setters>
                                                            <Setter Value="&#xEB52;" Target="PART_content.(PART_content.Text)"/>
                                                            <Setter Value="Red" Target="PART_content.(PART_content.Foreground)"/>
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                    <VisualState x:Name="Unchecked">
                                                        <VisualState.Setters>
                                                            <Setter Value="&#xEB51;" Target="PART_content.(PART_content.Text)" />
                                                            <Setter Value="{ThemeResource SystemAccentColor}" Target="PART_content.(PART_content.Foreground)" />
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                </VisualStateGroup.States>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <Grid Height="30" HorizontalAlignment="Center">
                                            <TextBlock FontSize="25" Foreground="{ThemeResource CMapUwpAcrylicBrush}" 
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       FontFamily="Segoe MDL2 Assets" Text="&#xEB52;"/>
                                            <TextBlock x:Name="PART_content" FontSize="24" Foreground="Red" 
                                                       VerticalAlignment="Center"
                                                       HorizontalAlignment="Center"
                                                       FontWeight="Light"
                                                       FontFamily="Segoe MDL2 Assets" Text="&#xE102;"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <ResourceDictionary.MergedDictionaries>
                        <ResourceDictionary>
                            <Style TargetType="CheckBox" x:Key="BoolStyle">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="CheckBox">
                                            <Border x:Name="PART_root">
                                                <VisualStateManager.VisualStateGroups>
                                                    <VisualStateGroup x:Name="CheckStates">
                                                        <VisualStateGroup.States>
                                                            <VisualState x:Name="Checked">
                                                                <VisualState.Setters>
                                                                    <Setter Value="&#xE73E;" Target="PART_content.(PART_content.Text)"/>
                                                                    <Setter Value="Green" Target="PART_content.(PART_content.Foreground)"/>
                                                                </VisualState.Setters>
                                                            </VisualState>
                                                            <VisualState x:Name="Unchecked">
                                                                <VisualState.Setters>
                                                                    <Setter Value="&#xE711;" Target="PART_content.(PART_content.Text)" />
                                                                    <Setter Value="Red" Target="PART_content.(PART_content.Foreground)" />
                                                                </VisualState.Setters>
                                                            </VisualState>
                                                        </VisualStateGroup.States>
                                                    </VisualStateGroup>
                                                </VisualStateManager.VisualStateGroups>
                                                <TextBlock x:Name="PART_content" FontSize="20" Foreground="Red" 
                                                   FontFamily="Segoe MDL2 Assets" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ResourceDictionary>
                    </ResourceDictionary.MergedDictionaries>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Frame Background="{ThemeResource CMapUwpAcrylicBrush}">
        <Grid Background="{ThemeResource CMapUwpAcrylicBrush}">
            <Grid.RowDefinitions>
                <RowDefinition Height="34" />
                <RowDefinition Height="166" />
                <RowDefinition Height="46" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="131*" />
                <ColumnDefinition Width="131*" />
                <ColumnDefinition Width="131*" />
                <ColumnDefinition Width="131*" />
            </Grid.ColumnDefinitions>
            
            <Ellipse
                Grid.Row="0"
                Grid.RowSpan="3"
                Grid.Column="0"
                Width="236"
                Height="236"
                DoubleTapped="UIElement_OnDoubleTapped"
                Margin="0">
                <Ellipse.Fill>
                    <ImageBrush>
                        <ImageBrush.ImageSource>
                            <BitmapImage UriSource="{x:Bind InstaUserInfo.HdProfilePicUrlInfo.Uri, Mode=OneWay}" />
                        </ImageBrush.ImageSource>
                    </ImageBrush>
                </Ellipse.Fill>
            </Ellipse>
            <ScrollViewer Grid.Row="3" Grid.Column="0" VerticalScrollBarVisibility="Hidden">
                <StackPanel Margin="10, 0, 10, 0">
                    <TextBlock
                        Grid.Column="1"
                        HorizontalAlignment="Center"
                        FontSize="25"
                        FontWeight="Medium"
                        Text="{x:Bind InstaUserInfo.Username, Mode=OneWay}"
                        TextWrapping="Wrap" 
                        HorizontalTextAlignment="Center"/>
                    <Button
                        x:Name="buttonAction"
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="10, 20"
                        FontWeight="Light"
                        HorizontalAlignment="Stretch"
                        Content="Action"
                        CornerRadius="5">
                        <Button.Flyout>
                            <MenuFlyout Placement="Bottom">
                                <MenuFlyoutItem
                                x:Name="followButton"
                                HorizontalAlignment="Stretch"
                                Click="FollowButton_Click"
                                CornerRadius="5"
                                IsEnabled="{x:Bind ButtonFollow, Mode=OneWay}"
                                FontWeight="Light"
                                Text="Follow" />
                                <MenuFlyoutItem
                                x:Name="unfollowButton"
                                HorizontalAlignment="Stretch"
                                Click="UnfollowButton_Click"
                                CornerRadius="5"
                                FontWeight="Light"
                                IsEnabled="{x:Bind ButtonUnFollow, Mode=OneWay}"
                                Text="Unfollow" />
                                <MenuFlyoutItem 
                                x:Name="profileImageButton"
                                HorizontalAlignment="Stretch"
                                Click="ProfileImageButton_OnClick"
                                Text="Download profile photo (HD)"
                                FontWeight="Light"
                                Tag="{x:Bind InstaUserInfo.HdProfilePicUrlInfo.Uri}"/>
                                <MenuFlyoutItem
                                x:Name="saveButton"
                                HorizontalAlignment="Stretch"
                                Click="SaveButton_Click"
                                FontWeight="Light"
                                CornerRadius="5"
                                Text="Download posts" />
                                <MenuFlyoutItem
                                x:Name="unlikeButton"
                                HorizontalAlignment="Stretch"
                                Click="UnlikeButton_Click"
                                FontWeight="Light"
                                CornerRadius="5"
                                Text="Unlike 30 posts" />
                            </MenuFlyout>
                        </Button.Flyout>
                    </Button>

                    <StackPanel Margin="2" Orientation="Horizontal">
                        <TextBlock
                        x:Uid="Following"
                        Margin="0, 0, 10, 0"
                        FontWeight="Light"
                        FontSize="20" />
                        <TextBlock
                        x:Name="FollowingBlock"
                        Grid.Column="1"
                        FontSize="20"
                        FontWeight="Light"
                        PointerEntered="UIElement_OnPointerEntered"
                        PointerExited="UIElement_OnPointerExited"
                        Tapped="FollowingBlock_OnTapped"
                        Text="{x:Bind InstaUserInfo.FollowingCount, Mode=OneWay}"
                        TextWrapping="Wrap" />
                    </StackPanel>
                    <StackPanel Margin="2" Orientation="Horizontal">
                        <TextBlock
                        x:Uid="Followers2"
                        FontWeight="Light"
                        Margin="0, 0, 10, 0"
                        FontSize="20" />
                        <TextBlock
                        Grid.Column="1"
                        FontSize="20"
                        FontWeight="Light"
                        PointerEntered="UIElement_OnPointerEntered"
                        PointerExited="UIElement_OnPointerExited"
                        Tapped="UIElement_OnTapped"
                        Text="{x:Bind InstaUserInfo.FollowerCount, Mode=OneWay}"
                        TextWrapping="Wrap" />
                    </StackPanel>
                    <StackPanel Margin="2" Orientation="Horizontal">
                        <TextBlock
                        x:Uid="Media"
                        Margin="0, 0, 10, 0"
                        FontWeight="Light"
                        FontSize="20" />
                        <TextBlock
                        Grid.Column="1"
                        FontSize="20"
                        FontWeight="Light"
                        Text="{x:Bind InstaUserInfo.MediaCount, Mode=OneWay}"
                        TextWrapping="Wrap" />
                        <!--<ProgressRing x:Name="ProgressAllPosts" Margin="5, 0, 0, 0"
                                  Width="5"
                                  Height="5"
                                  Foreground="White"
                                  IsActive="True"/>-->
                    </StackPanel>
                    <StackPanel Margin="2" Orientation="Horizontal">
                        <TextBlock
                        x:Uid="IsPrivate"
                        Margin="0, 0, 10, 0"
                        FontWeight="Light"
                        FontSize="20" />
                        <CheckBox
                        FontSize="25"
                        VerticalContentAlignment="Center"
                        IsEnabled="False"
                        IsChecked="{x:Bind InstaUserInfo.IsPrivate, Mode=OneWay}"
                        Style="{StaticResource BoolStyle}"
                        />
                    </StackPanel>
                    <StackPanel Margin="2" Orientation="Horizontal">
                        <TextBlock
                        x:Uid="FollowingOn"
                        Margin="0, 0, 10, 0"
                        FontWeight="Light"
                        FontSize="20" />
                        <CheckBox FontSize="25"
                              VerticalContentAlignment="Center"
                              HorizontalAlignment="Center"
                              IsEnabled="False"
                              IsChecked="{x:Bind InstaUserInfo.FriendshipStatus.Following, Mode=OneWay}" 
                              Style="{StaticResource BoolStyle}"/>
                    </StackPanel>
                    <StackPanel Margin="2" Orientation="Horizontal">
                        <TextBlock
                        x:Uid="FollowedBy"
                        Margin="0, 0, 10, 0"
                        FontWeight="Light"
                        FontSize="20" />
                        <CheckBox FontSize="25" 
                              VerticalContentAlignment="Center"
                              IsEnabled="False"
                              IsChecked="{x:Bind InstaUserInfo.FriendshipStatus.FollowedBy, Mode=OneWay}" 
                              Style="{StaticResource BoolStyle}"/>
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
            <Pivot
                x:Name="MainPivot"
                Grid.Row="0"
                Grid.RowSpan="4"
                Grid.Column="1"
                Grid.ColumnSpan="4"
                UseSystemFocusVisuals="True"
                HorizontalContentAlignment="Right">
                <Pivot.HeaderTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" Padding="30, 0" FontSize="20" FontWeight="ExtraLight"/>
                    </DataTemplate>
                </Pivot.HeaderTemplate>
                <PivotItem
                    x:Name="postTab"
                    x:Uid="Posts"
                    Header="Posts"
                    FontWeight="ExtraBlack" HorizontalAlignment="Stretch" Margin="0">
                    <Frame Margin="0, 0" CornerRadius="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="70" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <!--<Image Grid.Column="0" Opacity="1" Stretch="UniformToFill" Grid.RowSpan="2" Source="{x:Bind InstaUserInfo.HdProfilePicUrlInfo.Uri, Mode=OneWay}">
                                <interactivity:Interaction.Behaviors>
                                    <behaviors:Blur Value="100"></behaviors:Blur>
                                </interactivity:Interaction.Behaviors>
                            </Image>-->
                            <ProgressRing
                                x:Name="progressPosts"
                                Grid.Row="1"
                                Width="90"
                                Height="90" />
                                <AutoSuggestBox
                                x:Name="postBox"
                                IsEnabled="False"
                                Grid.Row="0"
                                Margin="10"
                                PlaceholderText="1, 3-6"
                                QueryIcon="Find"
                                Visibility="Collapsed"
                                QuerySubmitted="PostBox_QuerySubmitted"
                                RequestedTheme="Dark"/>
                            <ScrollViewer
                                    x:Name="scrollListPosts"
                                    Grid.Row="0"
                                    Grid.RowSpan="2"
                                    VerticalScrollBarVisibility="Auto"
                                    ViewChanged="ScrollListPosts_ViewChanged">
                                    <GridView
                                    x:Name="mediaList"
                                    HorizontalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    ItemsSource="{x:Bind Posts}"
                                    SelectionMode="None">
                                        <GridView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <ItemsWrapGrid Orientation="Horizontal" CacheLength="0"/>
                                        </ItemsPanelTemplate>
                                    </GridView.ItemsPanel>
                                    <GridView.ItemTemplate>
                                        <DataTemplate x:DataType="model:PostItem">
                                            <StackPanel Orientation="Vertical" Margin="10, 0" Padding="0, 10">
                                                <FlipView
                                                    x:Name="itemsList"
                                                    Width="{x:Bind Items[0].GetWidth}"
                                                    Height="{x:Bind Items[0].GetHeight}"
                                                    HorizontalContentAlignment="Center"
                                                    Background="{x:Null}"
                                                    CanBeScrollAnchor="False"
                                                    ItemsSource="{x:Bind Items}"
                                                    Tapped="MediaList_SelectionChanged" PointerWheelChanged="itemsList_PointerWheelChanged">
                                                    <FlipView.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <VirtualizingStackPanel
                                                                           Orientation="Horizontal" />
                                                        </ItemsPanelTemplate>
                                                    </FlipView.ItemsPanel>
                                                    <FlipView.ContextFlyout>
                                                        <MenuFlyout >
                                                            <MenuFlyoutItem Text="{x:Bind Items[0].CountLikersShow}"
                                                                            Tag="{x:Bind Items[0].Pk}"
                                                                            FontWeight="Light"
                                                                            Width="150"
                                                                            Click="MenuFlyoutItem_OnClick">
                                                            </MenuFlyoutItem>
                                                            <MenuFlyoutItem Text="{x:Bind Items[0].CountCommentsShow}"
                                                                            Tag="{x:Bind Items[0].Pk}"
                                                                            FontWeight="Light"
                                                                            Click="MenuFlyoutItem1_OnClick">
                                                            </MenuFlyoutItem>
                                                            <MenuFlyoutSeparator/>
                                                            <MenuFlyoutItem
                                                                        Click="ButtonDownload_Click"
                                                                        Text="Download"
                                                                        FontWeight="Light"
                                                                        Tag="{x:Bind Id}">
                                                            </MenuFlyoutItem>
                                                            <MenuFlyoutItem
                                                                        Click="ButtonSaveInProfile_Click"
                                                                        Text="Save in profile"
                                                                        FontWeight="Light"
                                                                        Tag="{x:Bind Items[0].Pk}">
                                                            </MenuFlyoutItem>
                                                            <MenuFlyoutItem
                                                                        Click="ButtonShare_Click"
                                                                        Text="Share in Direct"
                                                                        FontWeight="Light"
                                                                        Tag="{x:Bind Id}">
                                                            </MenuFlyoutItem>
                                                        </MenuFlyout>
                                                    </FlipView.ContextFlyout>
                                                    <FlipView.ItemTemplate>
                                                        <DataTemplate x:DataType="model:CustomMedia">
                                                            <StackPanel PointerWheelChanged="Image_PointerWheelChanged">
                                                                <Border 
                                                                        BorderBrush="{x:Null}"
                                                                        Width="{x:Bind GetWidth}"
                                                                        Height="{x:Bind GetHeight}"
                                                                        ToolTipService.ToolTip="{x:Bind DatePost}"
                                                                        CornerRadius="10">
                                                                    
                                                                    <Border.Background>
                                                                        <ImageBrush Stretch="UniformToFill" 
                                                                                 ImageSource="{x:Bind UrlBigImage}"/>
                                                                    </Border.Background>
                                                                    <Viewbox MaxHeight="20" MaxWidth="20"
                                                                             HorizontalAlignment="Right"
                                                                             Margin="5"
                                                                             Visibility="{x:Bind IsVideoVisibility}"
                                                                             VerticalAlignment="Top">
                                                                        <TextBlock 
                                                                                Foreground="#78898a"
                                                                                FontFamily="Segoe MDL2 Assets"
                                                                                Text="&#xEA0C;"/>
                                                                    </Viewbox>
                                                                </Border>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </FlipView.ItemTemplate>
                                                </FlipView>

                                                <Grid Margin="0, 5">
                                                    <CheckBox
                                                        x:Name="buttonLike"
                                                        Grid.Column="0"
                                                        HorizontalAlignment="Stretch"
                                                        CornerRadius="0"
                                                        IsChecked="{x:Bind Items[0].Liked}"
                                                        Click="ButtonLike_Click"
                                                        Tag="{x:Bind Id}"
                                                        MinWidth="20">
                                                        <CheckBox.Content>
                                                            <SymbolIcon Symbol="Like"/>
                                                        </CheckBox.Content>
                                                    </CheckBox>
                                                    <!--<StackPanel Orientation="Horizontal" 
                                                            Grid.Column="2"
                                                            Margin="5, -60, 0, 0"
                                                            HorizontalAlignment="Right">
                                                        <Button
                                                            Background="{x:Null}"
                                                            CornerRadius="12"
                                                            FontFamily="Segoe MDL2 Assets"
                                                            FontSize="20"
                                                            FontStretch="Condensed"
                                                            FontWeight="Light"
                                                            Content="&#xE712;"
                                                            RenderTransformOrigin="0.5,0.5">
                                                            <Button.RenderTransform >
                                                                <RotateTransform Angle="90"/>
                                                            </Button.RenderTransform>
                                                            <Button.Resources>
                                                                <ResourceDictionary>
                                                                    <ResourceDictionary.ThemeDictionaries>
                                                                        <ResourceDictionary x:Key="Dark">
                                                                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
                                                                        </ResourceDictionary>
                                                                        <ResourceDictionary x:Key="Light">
                                                                            <SolidColorBrush x:Key="ButtonForegroundPointerOver" Color="White"/>
                                                                            <SolidColorBrush x:Key="ButtonBackgroundPointerOver" Color="Transparent"/>
                                                                        </ResourceDictionary>
                                                                    </ResourceDictionary.ThemeDictionaries>
                                                                </ResourceDictionary>
                                                            </Button.Resources>
                                                            <Button.Flyout>
                                                                <MenuFlyout >
                                                                    <MenuFlyoutItem Text="{x:Bind Items[0].CountLikersShow}"
                                                                                    Tag="{x:Bind Items[0].Pk}"
                                                                                    FontWeight="Light"
                                                                                    Width="150"
                                                                                    Click="MenuFlyoutItem_OnClick">
                                                                    </MenuFlyoutItem>
                                                                    <MenuFlyoutItem Text="{x:Bind Items[0].CountCommentsShow}"
                                                                                    Tag="{x:Bind Items[0].Pk}"
                                                                                    FontWeight="Light"
                                                                                    Click="MenuFlyoutItem1_OnClick">
                                                                    </MenuFlyoutItem>
                                                                    <MenuFlyoutSeparator/>
                                                                    <MenuFlyoutItem
                                                                        Click="ButtonDownload_Click"
                                                                        Text="Download"
                                                                        FontWeight="Light"
                                                                        Tag="{x:Bind Id}">
                                                                    </MenuFlyoutItem>
                                                                    <MenuFlyoutItem
                                                                        Click="ButtonSaveInProfile_Click"
                                                                        Text="Save in profile"
                                                                        FontWeight="Light"
                                                                        Tag="{x:Bind Items[0].Pk}">
                                                                    </MenuFlyoutItem>
                                                                    <MenuFlyoutItem
                                                                        Click="ButtonShare_Click"
                                                                        Text="Share in Direct"
                                                                        FontWeight="Light"
                                                                        Tag="{x:Bind Id}">
                                                                    </MenuFlyoutItem>
                                                                </MenuFlyout>
                                                            --><!--</Button.Flyout>--><!--
                                                        </Button>

                                                    </StackPanel>-->
                                                </Grid>
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridView.ItemTemplate>
                                </GridView>
                            </ScrollViewer>
                        </Grid>
                    </Frame>
                </PivotItem>
                <PivotItem
                        x:Name="storyTab"
                        x:Uid="Stories"
                        Header="Stories"
                        Margin="0">
                    <Grid>
                        <!--<Image Grid.Column="0" Opacity="1" Stretch="UniformToFill" Grid.RowSpan="2" Source="{x:Bind InstaUserInfo.HdProfilePicUrlInfo.Uri, Mode=OneWay}">
                            <interactivity:Interaction.Behaviors>
                                <behaviors:Blur Value="100"></behaviors:Blur>
                            </interactivity:Interaction.Behaviors>
                        </Image>-->
                        <Frame Margin="0, 0" CornerRadius="0">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <GridView
                            x:Name="storiesList"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            ItemsSource="{x:Bind UrlStories}"
                            SelectionMode="None">
                                    <GridView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <ItemsWrapGrid Orientation="Horizontal" CacheLength="0"/>
                                        </ItemsPanelTemplate>
                                    </GridView.ItemsPanel>
                                    <GridView.ItemTemplate>
                                        <DataTemplate x:DataType="model:CustomMedia">
                                            <StackPanel Margin="20" Orientation="Vertical">
                                                <Border BorderBrush="{x:Null}"
                                                BorderThickness="1"
                                                Width="{x:Bind GetWidth}"
                                                Height="{x:Bind GetHeight}"
                                                ToolTipService.ToolTip="{x:Bind DatePost}"
                                                Tag="{x:Bind Pk}"
                                                Tapped="Image_Tapped_1" 
                                                CornerRadius="15">
                                                    <Border.Background>
                                                        <ImageBrush Stretch="UniformToFill" 
                                                                ImageSource="{x:Bind UrlBigImage}"/>
                                                    </Border.Background>
                                                    <Viewbox MaxHeight="20" MaxWidth="20"
                                                         HorizontalAlignment="Right"
                                                         Margin="10"
                                                         Visibility="{x:Bind IsVideoVisibility}"
                                                         VerticalAlignment="Top">
                                                        <TextBlock 
                                                        Foreground="#78898a"
                                                        FontFamily="Segoe MDL2 Assets"
                                                        Text="&#xEA0C;"/>
                                                    </Viewbox>
                                                </Border>
                                                <!--<Image
                                            Width="600"
                                            Height="500"
                                            Margin="10"
                                            HorizontalAlignment="Center"
                                            Source="{x:Bind UrlBigImage}"
                                            ToolTipService.ToolTip="{x:Bind DatePost}"
                                            Tag="{x:Bind Pk}"
                                            Tapped="Image_Tapped_1" />-->
                                                <Button
                                            x:Name="buttonDownloadStory"
                                            x:Uid="DownloadStory"
                                            Margin="10"
                                            HorizontalAlignment="Center"
                                            Click="ButtonDownloadStory_Click"
                                            CornerRadius="5"
                                            FontWeight="Light"
                                            Tag="{x:Bind Name}" />
                                                <AutoSuggestBox
                                            Width="200"
                                            Margin="5, 5, 5, 10"
                                            PlaceholderText="Message"
                                            QueryIcon="Send"
                                            QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                                            Tag="{x:Bind Pk}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GridView.ItemTemplate>
                                </GridView>
                            </ScrollViewer>
                        </Frame>
                    </Grid>
                </PivotItem>
                <PivotItem
                    x:Name="highTab"
                    Header="Highlights"
                    Margin="0">
                    <Grid>
                        <!--<Image Grid.Column="0" Opacity="1" Stretch="UniformToFill" Grid.RowSpan="2" Source="{x:Bind InstaUserInfo.HdProfilePicUrlInfo.Uri, Mode=OneWay}">
                            <interactivity:Interaction.Behaviors>
                                <behaviors:Blur Value="100"></behaviors:Blur>
                            </interactivity:Interaction.Behaviors>
                        </Image>-->
                        <Frame Margin="0" CornerRadius="0">
                            <Grid>
                                <ListView
                            x:Name="collectionsBox"
                            Grid.Row="0"
                            Margin="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            ItemsSource="{x:Bind InstaHighlightFeeds.Items}"
                            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                            ScrollViewer.HorizontalScrollMode="Enabled"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            ScrollViewer.VerticalScrollMode="Disabled"
                            SelectionChanged="CollectionsBox_SelectionChanged">
                                    <ListView.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Background="Transparent" Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ListView.ItemsPanel>
                                    <ListView.ItemTemplate>
                                        <DataTemplate x:Name="SingleLineDataTemplate" x:DataType="localInsta:InstaHighlightFeed">
                                            <StackPanel
                                        Grid.Column="0"
                                        Orientation="Vertical"
                                        Padding="9">
                                                <Ellipse
                                            Width="100"
                                            Height="100"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                                    <Ellipse.Fill>
                                                        <ImageBrush>
                                                            <ImageBrush.ImageSource>
                                                                <BitmapImage UriSource="{x:Bind CoverMedia.CroppedImage.Uri}" />
                                                            </ImageBrush.ImageSource>
                                                        </ImageBrush>
                                                    </Ellipse.Fill>
                                                </Ellipse>
                                                <TextBlock
                                            Margin="5"
                                            HorizontalAlignment="Center"
                                            Text="{x:Bind Title}"
                                            FontSize="16"
                                            FontWeight="Light"
                                            TextWrapping="Wrap" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </ListView.ItemTemplate>
                                </ListView>
                                <ScrollViewer
                                    x:Name="scrollArchive"
                                    Margin="0, 150, 0, 0"
                                    VerticalScrollBarVisibility="Auto">
                                    <GridView
                                    x:Name="archiveList"
                                    HorizontalAlignment="Center"
                                    HorizontalContentAlignment="Center"
                                    ItemsSource="{x:Bind HighlightsStories}"
                                    SelectionMode="None">
                                        <GridView.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <ItemsWrapGrid Orientation="Horizontal" CacheLength="0"/>
                                            </ItemsPanelTemplate>
                                        </GridView.ItemsPanel>
                                        <GridView.ItemTemplate>
                                            <DataTemplate x:DataType="model:CustomMedia">
                                                <StackPanel Margin="20, 10" Orientation="Vertical">
                                                    <Border BorderBrush="{x:Null}"
                                                    BorderThickness="1"
                                                    Width="{x:Bind GetWidth}"
                                                    Height="{x:Bind GetHeight}"
                                                    ToolTipService.ToolTip="{x:Bind DatePost}"
                                                    Tag="{x:Bind Pk}"
                                                    Tapped="Image_Tapped" 
                                                    CornerRadius="15">
                                                        <Border.Background>
                                                            <ImageBrush Stretch="UniformToFill" 
                                                                ImageSource="{x:Bind UrlBigImage}"/>
                                                        </Border.Background>
                                                        <Viewbox MaxHeight="20" MaxWidth="20"
                                                             HorizontalAlignment="Right"
                                                             Margin="10"
                                                             Visibility="{x:Bind IsVideoVisibility}"
                                                             VerticalAlignment="Top">
                                                            <TextBlock 
                                                            Foreground="#78898a"
                                                            FontFamily="Segoe MDL2 Assets"
                                                            Text="&#xEA0C;"/>
                                                        </Viewbox>
                                                    </Border>

                                                    <Button
                                                x:Name="buttonDownloadHigh"
                                                x:Uid="DownloadStory"
                                                Margin="5"
                                                FontWeight="Light"
                                                HorizontalAlignment="Center"
                                                Click="ButtonDownloadHigh_Click"
                                                CornerRadius="5"
                                                Tag="{x:Bind Name}" />
                                                </StackPanel>
                                            </DataTemplate>
                                        </GridView.ItemTemplate>
                                    </GridView>
                                </ScrollViewer>
                            </Grid>
                        </Frame>
                    </Grid>
                </PivotItem>
                <PivotItem
                    x:Name="StatTab"
                    Header="Statistics"
                    Margin="0">
                    <Grid>
                        <!--<Image Grid.Column="0" Opacity="1" Stretch="UniformToFill" Grid.RowSpan="2" Source="{x:Bind InstaUserInfo.HdProfilePicUrlInfo.Uri, Mode=OneWay}">
                            <interactivity:Interaction.Behaviors>
                                <behaviors:Blur Value="100"></behaviors:Blur>
                            </interactivity:Interaction.Behaviors>
                        </Image>-->
                        <ScrollViewer>
                            <StackPanel>
                                <Border CornerRadius="50" 
                                        Margin="30, 10"
                                        Background="{ThemeResource ScrollBarButtonForegroundThemeBrush}" Padding="10, 0">
                                    <StackPanel>
                                        <charting:Chart x:Name="likeChart"
                                                    Height="400" Margin="0">
                                            <charting:Chart.Axes>
                                                <charting:DateTimeAxis x:Name="AxisLikesX" Orientation="X" Location="Bottom" IntervalType="Months" Interval="2">
                                                    <charting:DateTimeAxis.AxisLabelStyle>
                                                        <Style TargetType="charting:DateTimeAxisLabel">
                                                            <Setter Property="StringFormat" Value="{}{0:dd.MM.yyyy}"/>
                                                        </Style>
                                                    </charting:DateTimeAxis.AxisLabelStyle>
                                                </charting:DateTimeAxis>
                                                <charting:LinearAxis x:Name="AxisLikesY" Orientation="Y" Interval="10"></charting:LinearAxis>
                                            </charting:Chart.Axes>
                                            <charting:LineSeries 
                                                Title="Likes"
                                                IndependentValuePath="Id"
                                                Tapped="Chart_OnTapped"
                                                DependentValuePath="Value" PointerEntered="LineSeries_PointerEntered" PointerExited="LineSeries_PointerExited">
                                                
                                            </charting:LineSeries>
                                            <charting:Chart.Palette>
                                                <charting:ResourceDictionaryCollection>
                                                    <ResourceDictionary>
                                                        <Style x:Key="DataPointStyle" TargetType="Control">
                                                            <Setter Property="Background" Value="{ThemeResource SystemControlHighlightAccentBrush}" />
                                                        </Style>
                                                    </ResourceDictionary>
                                                </charting:ResourceDictionaryCollection>
                                            </charting:Chart.Palette>
                                        </charting:Chart>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Border CornerRadius="10" 
                                                    Margin="10"
                                                    Padding="10, 5"
                                                    Background="{ThemeResource SystemControlHighlightAccentBrush}">
                                                <TextBlock x:Name="ChartMaxLikes" 
                                                           Margin="5" FontWeight="SemiLight"/>
                                            </Border>
                                            <Border CornerRadius="10" 
                                                    Margin="10"
                                                    Padding="10, 5"
                                                    Background="{ThemeResource SystemControlHighlightAccentBrush}">
                                                <TextBlock x:Name="ChartMinLikes" Margin="5" FontWeight="SemiLight"/>
                                            </Border>
                                            <Border CornerRadius="10" 
                                                    Margin="10"
                                                    Padding="10, 5"
                                                    Background="{ThemeResource SystemControlHighlightAccentBrush}">
                                                <TextBlock x:Name="ChartAverageLikes" Margin="5" FontWeight="SemiLight"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                                <Border CornerRadius="50" 
                                        Margin="30, 10"
                                        Background="{ThemeResource ScrollBarButtonForegroundThemeBrush}" Padding="10, 0">
                                    <StackPanel>
                                        <charting:Chart x:Name="commentChart" 
                                                    Height="400" Margin="0">
                                            <charting:Chart.Axes>
                                                <charting:DateTimeAxis x:Name="AxisCommentX" Orientation="X" Location="Bottom" IntervalType="Months" Interval="1">
                                                    <charting:DateTimeAxis.AxisLabelStyle>
                                                        <Style TargetType="charting:DateTimeAxisLabel">
                                                            <Setter Property="StringFormat" Value="{}{0:dd.MM.yyyy}"/>
                                                        </Style>
                                                    </charting:DateTimeAxis.AxisLabelStyle>
                                                </charting:DateTimeAxis>
                                                <charting:LinearAxis x:Name="AxisCommentY" Orientation="Y" Interval="5"></charting:LinearAxis>
                                            </charting:Chart.Axes>
                                            <charting:LineSeries 
                                                Title="Comments"
                                                IndependentValuePath="Id"
                                                PointerEntered="LineSeries_PointerEntered"
                                                PointerExited="LineSeries_PointerExited"
                                                Tapped="Chart_OnTapped"
                                                DependentValuePath="Value">
                                            </charting:LineSeries>
                                            <charting:Chart.Palette>
                                                <charting:ResourceDictionaryCollection>
                                                    <ResourceDictionary>
                                                        <Style x:Key="DataPointStyle" TargetType="Control">
                                                            <Setter Property="Background" Value="{ThemeResource SystemAltLowColor}" />
                                                        </Style>
                                                    </ResourceDictionary>
                                                </charting:ResourceDictionaryCollection>
                                            </charting:Chart.Palette>
                                        </charting:Chart>
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                            <Border CornerRadius="10" 
                                                    Margin="10"
                                                    Padding="10, 5"
                                                    Background="{ThemeResource SystemControlHighlightAccentBrush}">
                                                <TextBlock x:Name="ChartMaxComments" 
                                                           Margin="5" FontWeight="SemiLight"/>
                                            </Border>
                                            <Border CornerRadius="10" 
                                                    Margin="10"
                                                    Padding="10, 5"
                                                    Background="{ThemeResource SystemControlHighlightAccentBrush}">
                                                <TextBlock x:Name="ChartMinComments" Margin="5" FontWeight="SemiLight"/>
                                            </Border>
                                            <Border CornerRadius="10" 
                                                    Margin="10"
                                                    Padding="10, 5"
                                                    Background="{ThemeResource SystemControlHighlightAccentBrush}">
                                                <TextBlock x:Name="ChartAverageComments" Margin="5" FontWeight="SemiLight"/>
                                            </Border>
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </PivotItem>
            </Pivot>
        </Grid>
    </Frame>
</Page>
