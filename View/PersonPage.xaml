<Page
    x:Class="MyInsta.View.PersonPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:MyInsta.View"
    xmlns:localInsta="using:InstagramApiSharp.Classes.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:MyInsta.Model"
    mc:Ignorable="d"
    Background="{ThemeResource SystemControlAcrylicElementBrush}"
    Unloaded="Page_Unloaded"
    xml:space="preserve">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceDictionary x:Key="Default">
                    <AcrylicBrush
                        x:Key="CMapUwpAcrylicBrush"
                        BackgroundSource="HostBackdrop"
                        FallbackColor="{StaticResource SystemAccentColor}"
                        TintColor="Black"
                        TintOpacity="0.4" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="HighContrast">
                    <SolidColorBrush x:Key="CMapUwpAcrylicBrush" Color="{ThemeResource SystemColorWindowColor}" />
                </ResourceDictionary>
                <ResourceDictionary x:Key="Light">
                    <AcrylicBrush
                        x:Key="CMapUwpAcrylicBrush"
                        BackgroundSource="HostBackdrop"
                        FallbackColor="{StaticResource SystemAccentColor}"
                        TintColor="Black"
                        TintOpacity="0.4" />
                </ResourceDictionary>
            </ResourceDictionary.ThemeDictionaries>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <Style TargetType="CheckBox">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="CheckBox">
                                    <Border x:Name="PART_root">
                                        <VisualStateManager.VisualStateGroups>
                                            <VisualStateGroup x:Name="CheckStates">
                                                <VisualStateGroup.States>
                                                    <VisualState x:Name="Checked">
                                                        <VisualState.Setters>
                                                            <Setter Value="Red" Target="PART_content.(PART_content.Foreground)" />
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                    <VisualState x:Name="Unchecked">
                                                        <VisualState.Setters>
                                                            <Setter Value="White" Target="PART_content.(PART_content.Foreground)" />
                                                        </VisualState.Setters>
                                                    </VisualState>
                                                </VisualStateGroup.States>
                                            </VisualStateGroup>
                                        </VisualStateManager.VisualStateGroups>
                                        <SymbolIcon x:Name="PART_content" Symbol="Like" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="{ThemeResource CMapUwpAcrylicBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="34" />
            <RowDefinition Height="166" />
            <RowDefinition Height="46" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="131*" />
            <ColumnDefinition Width="131*" />
            <ColumnDefinition Width="131*" />
            <ColumnDefinition Width="131*" />
        </Grid.ColumnDefinitions>
        <Ellipse
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="0"
            Width="200"
            Height="200"
            Margin="20,20,20,20">
            <Ellipse.Fill>
                <ImageBrush>
                    <ImageBrush.ImageSource>
                        <BitmapImage UriSource="{x:Bind InstaUserInfo.ProfilePicUrl}" />
                    </ImageBrush.ImageSource>
                </ImageBrush>
            </Ellipse.Fill>
        </Ellipse>
        <ScrollViewer Grid.Row="3">
            <StackPanel Margin="10, 0, 10, 0">
                <Button
                    x:Name="buttonAction"
                    Grid.Row="1"
                    Grid.Column="0"
                    Margin="10"
                    HorizontalAlignment="Stretch"
                    Content="Action"
                    CornerRadius="5">
                    <Button.Flyout>
                        <MenuFlyout>
                            <MenuFlyoutItem
                                x:Name="followButton"
                                HorizontalAlignment="Stretch"
                                Click="FollowButton_Click"
                                CornerRadius="5"
                                IsEnabled="{x:Bind ButtonFollow, Mode=TwoWay}"
                                Text="Follow" />
                            <MenuFlyoutItem
                                x:Name="unfollowButton"
                                HorizontalAlignment="Stretch"
                                Click="UnfollowButton_Click"
                                CornerRadius="5"
                                IsEnabled="{x:Bind ButtonUnFollow, Mode=TwoWay}"
                                Text="Unfollow" />
                            <MenuFlyoutItem
                                x:Name="saveButton"
                                HorizontalAlignment="Stretch"
                                Click="SaveButton_Click"
                                CornerRadius="5"
                                Text="Download posts" />
                            <MenuFlyoutItem
                                x:Name="unlikeButton"
                                HorizontalAlignment="Stretch"
                                Click="UnlikeButton_Click"
                                CornerRadius="5"
                                Text="Unlike 30 posts" />
                        </MenuFlyout>
                    </Button.Flyout>
                </Button>
                <TextBlock
                    Grid.Column="1"
                    HorizontalAlignment="Center"
                    FontSize="25"
                    Text="{x:Bind InstaUserInfo.FullName}"
                    TextWrapping="Wrap" />
                <StackPanel Margin="2" Orientation="Horizontal">
                    <TextBlock
                        x:Uid="Following"
                        Margin="0, 0, 10, 0"
                        FontSize="20" />
                    <TextBlock
                        Grid.Column="1"
                        FontSize="20"
                        Text="{x:Bind InstaUserInfo.FollowingCount}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Margin="2" Orientation="Horizontal">
                    <TextBlock
                        x:Uid="Followers2"
                        Margin="0, 0, 10, 0"
                        FontSize="20" />
                    <TextBlock
                        Grid.Column="1"
                        FontSize="20"
                        Text="{x:Bind InstaUserInfo.FollowerCount}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Margin="2" Orientation="Horizontal">
                    <TextBlock
                        x:Uid="Media"
                        Margin="0, 0, 10, 0"
                        FontSize="20" />
                    <TextBlock
                        Grid.Column="1"
                        FontSize="20"
                        Text="{x:Bind InstaUserInfo.MediaCount}"
                        TextWrapping="Wrap" />
                    <ProgressRing x:Name="ProgressAllPosts" Margin="5, 0, 0, 0"
                                  Width="5"
                                  Height="5"
                                  Foreground="White"
                                  IsActive="True"/>
                </StackPanel>
                <StackPanel Margin="2" Orientation="Horizontal">
                    <TextBlock
                        x:Uid="IsPrivate"
                        Margin="0, 0, 10, 0"
                        FontSize="20" />
                    <TextBlock
                        Grid.Column="1"
                        FontSize="20"
                        Text="{x:Bind InstaUserInfo.IsPrivate}"
                        TextWrapping="Wrap" />
                </StackPanel>
                <StackPanel Margin="2" Orientation="Horizontal">
                    <TextBlock
                        x:Uid="FollowingOn"
                        Margin="0, 0, 10, 0"
                        FontSize="20" />
                    <TextBlock FontSize="20" Text="{x:Bind InstaUserInfo.FriendshipStatus.Following}" />
                </StackPanel>
                <StackPanel Margin="2" Orientation="Horizontal">
                    <TextBlock
                        x:Uid="FollowedBy"
                        Margin="0, 0, 10, 0"
                        FontSize="20" />
                    <TextBlock FontSize="20" Text="{x:Bind InstaUserInfo.FriendshipStatus.FollowedBy}" />
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
        <controls:TabView
            Grid.Row="0"
            Grid.RowSpan="4"
            Grid.Column="1"
            Grid.ColumnSpan="4"
            Margin="10"
            Background="{ThemeResource CMapUwpAcrylicBrush}"
            FontFamily="Myanmar Text"
            TabWidthBehavior="Equal">
            <controls:TabViewItem
                x:Name="postTab"
                x:Uid="Posts"
                Background="{ThemeResource CMapUwpAcrylicBrush}"
                FontFamily="Century Gothic"
                Icon="Camera">
                <Frame Margin="10" CornerRadius="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <ProgressRing
                            x:Name="progressPosts"
                            Grid.Row="1"
                            Width="90"
                            Height="90" />
                        <AutoSuggestBox
                            x:Name="postBox"
                            IsEnabled="False"
                            Grid.Row="0"
                            Margin="10"
                            PlaceholderText="1, 3-6"
                            QueryIcon="Find"
                            QuerySubmitted="PostBox_QuerySubmitted"
                            RequestedTheme="Dark"/>
                        <ScrollViewer
                            x:Name="scrollListPosts"
                            Grid.Row="1"
                            VerticalScrollBarVisibility="Auto"
                            ViewChanged="ScrollListPosts_ViewChanged">
                            <GridView
                                x:Name="mediaList"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                ItemsSource="{x:Bind Posts}"
                                SelectionMode="None">
                                <GridView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsWrapGrid Orientation="Horizontal" CacheLength="0"/>
                                    </ItemsPanelTemplate>
                                </GridView.ItemsPanel>
                                <GridView.ItemTemplate>
                                    <DataTemplate x:DataType="model:PostItem">
                                        <StackPanel Orientation="Vertical">
                                            <FlipView
                                                x:Name="itemsList"
                                                Width="500"
                                                HorizontalContentAlignment="Center"
                                                Foreground="{x:Null}"
                                                ItemsSource="{x:Bind Items}"
                                                ScrollViewer.HorizontalScrollMode="Disabled"
                                                Tapped="MediaList_SelectionChanged">
                                                <FlipView.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" />
                                                    </ItemsPanelTemplate>
                                                </FlipView.ItemsPanel>
                                                <FlipView.ItemTemplate>
                                                    <DataTemplate x:DataType="model:CustomMedia">
                                                        <StackPanel>
                                                            <Image
                                                                Height="400"
                                                                Margin="10"
                                                                Source="{x:Bind UrlSmallImage}" />
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </FlipView.ItemTemplate>
                                            </FlipView>
                                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                <TextBlock
                                                    x:Uid="Likes"
                                                    Margin="5, 5, 10, 5"
                                                    FontSize="20" />
                                                <TextBlock
                                                    Margin="5, 5, 10, 5"
                                                    FontSize="20"
                                                    Text="{x:Bind Items[0].CountLikes}" />
                                            </StackPanel>
                                            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                                                <TextBlock
                                                    x:Uid="Comments"
                                                    Margin="5, 5, 10, 5"
                                                    FontSize="20"
                                                    Tag="{x:Bind Items[0].Pk}"
                                                    Tapped="TextBlock_Tapped" />
                                                <TextBlock
                                                    Margin="5, 5, 10, 5"
                                                    FontSize="20"
                                                    Text="{x:Bind Items[0].CountComments}" />
                                            </StackPanel>
                                            <Grid >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="6*"/>
                                                </Grid.ColumnDefinitions>

                                                <CheckBox
                                                    x:Name="buttonLike"
                                                    Grid.Column="0"
                                                    Margin="10"
                                                    HorizontalAlignment="Left"
                                                    CornerRadius="5"
                                                    IsChecked="{x:Bind Items[0].Liked}"
                                                    Click="ButtonLike_Click"
                                                    Tag="{x:Bind Id}"
                                                    MinWidth="20">
                                                    <CheckBox.Content>
                                                        <SymbolIcon Symbol="Like" />
                                                    </CheckBox.Content>
                                                </CheckBox>
                                                
                                                <StackPanel Orientation="Horizontal" 
                                                            Grid.Column="1"
                                                            HorizontalAlignment="Right">
                                                <Button
                                                    x:Name="buttonDownload"
                                                    Margin="10"
                                                    HorizontalAlignment="Center"
                                                    Click="ButtonDownload_Click"
                                                    CornerRadius="5"
                                                    Tag="{x:Bind Id}">
                                                    <Button.Content>
                                                        <SymbolIcon Symbol="Download" />
                                                    </Button.Content>
                                                </Button>
                                                <Button
                                                    x:Name="buttonSaveInProfile"
                                                    Margin="10"
                                                    Click="ButtonSaveInProfile_Click"
                                                    CornerRadius="5"
                                                    ToolTipService.ToolTip="Add to saved posts"
                                                    Tag="{x:Bind Items[0].Pk}">
                                                    <Button.Content>
                                                        <SymbolIcon Symbol="Save" />
                                                    </Button.Content>
                                                </Button>
                                                <Button
                                                    x:Name="buttonShare"
                                                    Margin="10"
                                                    Click="ButtonShare_Click"
                                                    CornerRadius="5"
                                                    ToolTipService.ToolTip="Share in direct"
                                                    Tag="{x:Bind Id}">
                                                    <Button.Content>
                                                        <SymbolIcon Symbol="Share" />
                                                    </Button.Content>
                                                </Button>
                                                </StackPanel>
                                            </Grid>
                                            </StackPanel>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                        </ScrollViewer>
                    </Grid>
                </Frame>
            </controls:TabViewItem>
            <controls:TabViewItem
                x:Name="storyTab"
                x:Uid="Stories"
                Background="{ThemeResource CMapUwpAcrylicBrush}"
                FontFamily="Myanmar Text"
                Icon="View"
                Visibility="Collapsed">
                <Frame Margin="10" CornerRadius="0">
                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                        <GridView
                            x:Name="storiesList"
                            HorizontalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            ItemsSource="{x:Bind UrlStories}"
                            SelectionMode="None">
                            <GridView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <ItemsWrapGrid Orientation="Horizontal" CacheLength="0"/>
                                </ItemsPanelTemplate>
                            </GridView.ItemsPanel>
                            <GridView.ItemTemplate>
                                <DataTemplate x:DataType="model:CustomMedia">
                                    <StackPanel Margin="20" Orientation="Vertical">
                                        <TextBlock HorizontalAlignment="Center" Text="{x:Bind DatePost}" />
                                        <Image
                                            Width="600"
                                            Height="500"
                                            Margin="10"
                                            HorizontalAlignment="Center"
                                            Source="{x:Bind UrlBigImage}"
                                            Tag="{x:Bind Pk}"
                                            Tapped="Image_Tapped_1" />
                                        <Button
                                            x:Name="buttonDownloadStory"
                                            x:Uid="DownloadStory"
                                            Margin="10"
                                            HorizontalAlignment="Center"
                                            Click="ButtonDownloadStory_Click"
                                            CornerRadius="5"
                                            Tag="{x:Bind Name}" />
                                        <AutoSuggestBox
                                            Width="200"
                                            Margin="5, 5, 5, 10"
                                            PlaceholderText="Message"
                                            QueryIcon="Send"
                                            QuerySubmitted="AutoSuggestBox_QuerySubmitted"
                                            Tag="{x:Bind Pk}" />
                                    </StackPanel>
                                </DataTemplate>
                            </GridView.ItemTemplate>
                        </GridView>
                    </ScrollViewer>
                </Frame>
            </controls:TabViewItem>
            <controls:TabViewItem
                x:Name="highTab"
                Background="{ThemeResource CMapUwpAcrylicBrush}"
                FontFamily="Myanmar Text"
                Header="Highlights"
                Icon="View"
                Visibility="Collapsed">
                <Frame Margin="10" CornerRadius="0">
                    <Grid>
                        <ListView
                            x:Name="collectionsBox"
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            ItemsSource="{x:Bind InstaHighlightFeeds.Items}"
                            ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                            ScrollViewer.HorizontalScrollMode="Enabled"
                            ScrollViewer.VerticalScrollBarVisibility="Disabled"
                            ScrollViewer.VerticalScrollMode="Disabled"
                            SelectionChanged="CollectionsBox_SelectionChanged">
                            <ListView.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Background="Transparent" Orientation="Horizontal" />
                                </ItemsPanelTemplate>
                            </ListView.ItemsPanel>
                            <ListView.ItemTemplate>
                                <DataTemplate x:Name="SingleLineDataTemplate" x:DataType="localInsta:InstaHighlightFeed">
                                    <StackPanel
                                        Grid.Column="0"
                                        Width="100"
                                        Height="122"
                                        Orientation="Vertical"
                                        Padding="9">
                                        <Ellipse
                                            Width="70"
                                            Height="70"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center">
                                            <Ellipse.Fill>
                                                <ImageBrush>
                                                    <ImageBrush.ImageSource>
                                                        <BitmapImage UriSource="{x:Bind CoverMedia.CroppedImage.Uri}" />
                                                    </ImageBrush.ImageSource>
                                                </ImageBrush>
                                            </Ellipse.Fill>
                                        </Ellipse>
                                        <TextBlock
                                            Margin="4"
                                            HorizontalAlignment="Center"
                                            Text="{x:Bind Title}"
                                            TextWrapping="Wrap" />
                                    </StackPanel>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <ScrollViewer
                            x:Name="scrollArchive"
                            Margin="0, 122, 0, 0"
                            VerticalScrollBarVisibility="Hidden">
                            <GridView
                                x:Name="archiveList"
                                HorizontalAlignment="Center"
                                HorizontalContentAlignment="Center"
                                ItemsSource="{x:Bind HighlightsStories}"
                                SelectionMode="None">
                                <GridView.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <ItemsWrapGrid Orientation="Horizontal" CacheLength="0"/>
                                    </ItemsPanelTemplate>
                                </GridView.ItemsPanel>
                                <GridView.ItemTemplate>
                                    <DataTemplate x:DataType="model:CustomMedia">
                                        <StackPanel Margin="10" Orientation="Vertical">
                                            <TextBlock HorizontalAlignment="Center" Text="{x:Bind DatePost}" />
                                            <Image
                                                Width="500"
                                                Height="400"
                                                Margin="5"
                                                HorizontalAlignment="Center"
                                                Source="{x:Bind UrlBigImage}"
                                                Tag="{x:Bind Pk}"
                                                Tapped="Image_Tapped" />
                                            <Button
                                                x:Name="buttonDownloadHigh"
                                                x:Uid="DownloadStory"
                                                Margin="5"
                                                HorizontalAlignment="Center"
                                                Click="ButtonDownloadHigh_Click"
                                                CornerRadius="5"
                                                Tag="{x:Bind Name}" />
                                        </StackPanel>
                                    </DataTemplate>
                                </GridView.ItemTemplate>
                            </GridView>
                        </ScrollViewer>
                    </Grid>
                </Frame>
            </controls:TabViewItem>
        </controls:TabView>
    </Grid>

</Page>
